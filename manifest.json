{
  "manifest_version": 3,
  "name": "Smart Notes Taker",
  "version": "1.0",
  "description": "Summarize selected text using AI and save it as notes.",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "*://*/*"
  ]
}
